{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "overrides": [],
  "plugins": ["react"],
  "rules": {
    "no-lonely-if": "warn",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  }
}
